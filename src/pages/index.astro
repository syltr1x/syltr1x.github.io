	<script>
		const cards = document.querySelectorAll(".card");

function updateActiveCard() {
		if (window.innerWidth > 640) {return 0}
    let viewportCenter = window.innerHeight / 2;
    let closestCard = null;
    let minDistance = 180;

    cards.forEach(card => {
        let rect = card.getBoundingClientRect();
        let cardCenter = rect.top + rect.height / 2;
        let distance = Math.abs(viewportCenter - cardCenter);

        if (distance < minDistance) {
            minDistance = distance;
            closestCard = card;
        }
    });

	cards.forEach(card => card.classList.remove("opacity-0"));
	if (closestCard) closestCard.classList.add("opacity-0");
}

// Llamamos a la función en cada evento de scroll
window.addEventListener("scroll", updateActiveCard);

// También la ejecutamos una vez al cargar la página
updateActiveCard();
</script>
